{
  "semi": false,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": false,
  "trailingComma": "none",
  "arrowParens": "always",
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleAttributePerLine": true,
  "htmlWhitespaceSensitivity": "ignore",
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^vue",
    "^vue-router",
    "^vue-i18n",
    "^lucide-vue-next",
    "^pinia",
    "^@vueuse",
    "^vee-validate",
    "^@/lang",
    "^@/stores",
    "^@/composables",
    "^@/services",
    "^@/utils",
    "^@/config",
    "^@/plugins",
    "^@/validation",
    "^@/bootstrap",
    "^@/setupI18n",
    "^@/router",
    "^@/App",
    "^@/components",
    "^@/enums",
    "^@/types",
    "^@plans-tracker/types$",
    "^@/",
    "^[./]"
  ]
}
