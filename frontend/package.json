{
  "name": "plans-tracker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite --mode development",
    "dev:vite": "vite --mode development",
    "dev:tunnel": "cloudflared tunnel --url http://localhost:5173",
    "dev:all": "run-p dev:vite dev:tunnel",
    "build": "run-s icons:optimize type-check \"build-only {@}\" --",
    "build-only": "vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production",
    "test:unit": "vitest",
    "icons:optimize": "svgo -f public/icons -r || exit 0",
    "type-check": "vue-tsc --build",
    "lint:fix": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "translate": "npx polyglot-keeper sync"
  },
  "dependencies": {
    "@twa-dev/sdk": "^8.0.2",
    "@vueuse/core": "^14.2.1",
    "pinia": "^3.0.4",
    "reka-ui": "^2.8.0",
    "simplebar-vue": "^2.4.2",
    "vee-validate": "4.15.1",
    "vue": "^3.5.26",
    "vue-draggable-plus": "^0.6.1",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.6.4",
    "yup": "1.7.1"
  },
  "devDependencies": {
    "@plans-tracker/types": "file:../npm/plan-tracker-types",
    "@tailwindcss/vite": "^4.1.18",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@tsconfig/node24": "^24.0.3",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/eslint-plugin": "^1.6.5",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eruda": "^3.4.3",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-vue": "~10.6.2",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "lucide-vue-next": "^0.563.0",
    "npm-run-all2": "^8.0.4",
    "polyglot-keeper": "^1.1.1",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sass": "^1.89.2",
    "svgo": "^4.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,mts,cts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,scss,css,html}": [
      "prettier --write"
    ]
  }
}
