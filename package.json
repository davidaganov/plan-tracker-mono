{
  "name": "plans-tracker-root",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-with-tunnel.js",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:all": "run-p dev:backend dev:frontend",
    "tunnel": "npm --prefix frontend run dev:tunnel",
    "lint": "run-s lint:backend lint:frontend",
    "lint:backend": "npm --prefix backend run lint",
    "lint:frontend": "npm --prefix frontend run lint",
    "format": "run-s format:backend format:frontend",
    "format:backend": "npm --prefix backend run format",
    "format:frontend": "npm --prefix frontend run format",
    "format:check": "run-s format:check:backend format:check:frontend",
    "format:check:backend": "npm --prefix backend run format:check",
    "format:check:frontend": "npm --prefix frontend run format:check",
    "install:all": "run-s install:backend install:frontend",
    "install:backend": "npm --prefix backend install",
    "install:frontend": "npm --prefix frontend install",
    "type-check": "run-s type-check:changed",
    "type-check:all": "run-s type-check:backend type-check:frontend",
    "type-check:backend": "npm --prefix backend run type-check",
    "type-check:frontend": "npm --prefix frontend run type-check",
    "test": "run-s test:changed",
    "test:all": "run-s test:backend test:frontend",
    "test:backend": "npm --prefix backend run test",
    "test:frontend": "npm --prefix frontend run test:unit",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "npm-run-all2": "^8.0.4"
  }
}
